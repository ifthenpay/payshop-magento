    <head>
        <css src="Ifthenpay_Payshop::ifthenpayPayshop.min.css" />
    </head>
    <body>
    <referenceContainer name="page.messages">
        <block class="Magento\Framework\View\Element\Template" name="ajax.message.placeholder" template="Magento_Theme::html/messages.phtml"/>
        <block class="Magento\Framework\View\Element\Messages" name="messages" as="messages" template="Magento_Theme::messages.phtml"/>
</referenceContainer>
        <referenceContainer name="order.success.additional.info">
            <block class="Ifthenpay\Payshop\Block\Checkout\Onepage\Success\Response"
                   name="onepage.success.response"
                   template="Ifthenpay_Payshop::checkout/onepage/success/response.phtml"/>
